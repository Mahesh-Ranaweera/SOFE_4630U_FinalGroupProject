
extends header

block content
    .app-menu-transparent
        .app-nav-left
            .app-logo
            .app-name
                | #{title}
                
        .app-nav-right
            a(href='/signin')
                .app-nav-title
                    | SIGN IN
                
    .app-content
        .card-holder.full_w
            .uk-card.uk-card-default.uk-card-hover.uk-card-body
                
                //-header
                .section
                    img(src='../assets/header.svg', style='height: 380px; display: block; margin:auto')

                //-signup
                a(href='/signin')
                    .section.selected
                        img(src='../assets/signup.svg', style='height: 150px; display: block; margin:auto')

                //-description
                .section
                    img(src='../assets/description.svg', style='height: 400px; display: block; margin:auto')
