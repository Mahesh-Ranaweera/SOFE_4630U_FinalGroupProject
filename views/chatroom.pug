extends dashb_layout

block dashb
	include group_menu

	.section
		.group-header
			.group-icon-g.smooth(uk-toggle="target: #shareCode")
				.group-icon
					i(data-feather='share' style='width:20px; height:20px;')
				.group-txt
					| Room share code

	.content-card
		h4(id='chatTitle') Chatroom title

		.chat-wrapper

			//-display the chat data
			.chat-content(id='chatLog')

			.chat-footer
				.chat-footer-3w
					input.form-control.chat-input(type='text', id='chatmsg')
				.chat-footer-w
					button.chat-btns(type='button', id='submitMsg', value='Send')
						i(data-feather='send' style='width:20px; height:20px;')



	div.uk-flex-top(id="shareCode", uk-modal)
		.uk-modal-dialog.uk-modal-body.uk-margin-auto-vertical
			button.uk-modal-close-default(type='button', uk-close)
			.uk-modal-header
				h2.uk-modal-title Room sharing code
			
			.uk-modal-body
				.uk-width-1-1
					label(for='roomCode') Copy this code and share it with others so they can join this chat room
					input.form-control(type='text', id='roomCode', value=roomCode)
			.uk-margin
					.uk-text-right
						button.uk-button.uk-button-primary(name='btncopyCode', onclick='copyCode()') Copy to clipboard


